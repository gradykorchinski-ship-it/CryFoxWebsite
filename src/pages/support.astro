---
import "../styles/global.css";
import logo from "../images/logo.png?url";
const brand = "CryFox";
const faqs = [
  { q: "How do I import bookmarks?", a: "Add your real instructions here. Typically: Settings → Import → Choose browser." },
  { q: "How do I enable strict tracking protection?", a: "Add a real path to your settings toggle and what it blocks." },
  { q: "Where are profiles stored?", a: "Add OS-specific paths and how to back up safely." },
  { q: "How do I report a bug?", a: "Link to GitHub Issues / support email and include what logs to attach." },
];
---

<!doctype html>
<html lang="en" class="bg-zinc-950 text-zinc-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{brand} — Support</title>
    <meta name="description" content="Support, FAQs, and troubleshooting for CryFox." />
  </head>
  <body class="min-h-screen">
    <div aria-hidden="true" class="pointer-events-none fixed inset-0 -z-10 overflow-hidden">
      <div class="absolute -top-48 left-1/2 h-[620px] w-[620px] -translate-x-1/2 rounded-full bg-violet-500/20 blur-3xl"></div>
      <div class="absolute top-24 left-8 h-[420px] w-[420px] rounded-full bg-sky-500/10 blur-3xl"></div>
      <div class="absolute bottom-0 right-0 h-[520px] w-[520px] rounded-full bg-fuchsia-500/10 blur-3xl"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-zinc-950 via-zinc-950/70 to-zinc-950"></div>
      <div class="absolute inset-0 opacity-[0.08] [background-image:radial-gradient(circle_at_1px_1px,white_1px,transparent_0)] [background-size:22px_22px]"></div>
    </div>

    <header class="sticky top-0 z-40 border-b border-white/10 bg-zinc-950/60 backdrop-blur">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3">
        <a href="/" class="flex items-center gap-3">
          <img src={logo} alt="CryFox logo" class="h-7 w-7 object-contain" />
          <div class="leading-tight">
            <div class="font-semibold tracking-tight">{brand}</div>
            <div class="text-xs text-zinc-400">Fast • Private • Yours</div>
          </div>
        </a>

        <nav class="hidden items-center gap-6 text-sm md:flex">
          <a class="text-zinc-300 hover:text-white/90" href="/features">Features</a>
          <a class="text-zinc-300 hover:text-white/90" href="/privacy">Privacy</a>
          <a class="text-white/90" href="/support">Support</a>
          <a class="text-zinc-300 hover:text-white/90" href="/blog">Blog</a>
          <a class="rounded-lg bg-violet-500 px-4 py-2 font-semibold text-zinc-950 hover:bg-violet-400" href="/download">Download</a>
        </nav>

        <button id="menuBtn" class="md:hidden rounded-lg border border-white/10 bg-white/5 px-3 py-2 text-sm">Menu</button>
      </div>

      <div id="mobileMenu" class="hidden md:hidden border-t border-white/10 bg-zinc-950/80 backdrop-blur">
        <div class="mx-auto max-w-6xl px-4 py-3 space-y-2 text-sm">
          <a class="block rounded-lg px-3 py-2 hover:bg-white/5" href="/features">Features</a>
          <a class="block rounded-lg px-3 py-2 hover:bg-white/5" href="/privacy">Privacy</a>
          <a class="block rounded-lg bg-white/5 px-3 py-2" href="/support">Support</a>
          <a class="block rounded-lg px-3 py-2 hover:bg-white/5" href="/blog">Blog</a>
          <a class="block rounded-lg bg-violet-500 px-3 py-2 font-semibold text-zinc-950 hover:bg-violet-400" href="/download">Download</a>
        </div>
      </div>
    </header>

    <main>
      <section class="mx-auto max-w-6xl px-4 py-14">
        <p class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-200">
          <span class="h-1.5 w-1.5 rounded-full bg-violet-400"></span>
          Support
        </p>
        <h1 class="mt-5 text-4xl font-semibold tracking-tight">Help without the runaround.</h1>
        <p class="mt-4 max-w-2xl text-zinc-300">
          Quick answers, troubleshooting, and where to report issues.
        </p>

        <div class="mt-10 grid gap-4 md:grid-cols-3">
          <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <div class="text-sm font-semibold">Knowledge Base</div>
            <p class="mt-2 text-sm text-zinc-400">Setup guides, tips, and fixes (add real links later).</p>
            <a class="mt-4 inline-block rounded-xl border border-white/10 bg-white/5 px-4 py-2 text-sm font-semibold hover:bg-white/10" href="/blog">
              Browse articles
            </a>
          </div>

          <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <div class="text-sm font-semibold">Report a Bug</div>
            <p class="mt-2 text-sm text-zinc-400">Send steps to reproduce + version + OS.</p>
            <a class="mt-4 inline-block rounded-xl bg-violet-500 px-4 py-2 text-sm font-semibold text-zinc-950 hover:bg-violet-400" href="#">
              Open issue tracker
            </a>
          </div>

          <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <div class="text-sm font-semibold">Community</div>
            <p class="mt-2 text-sm text-zinc-400">Forums / Discord / Matrix — wherever your people live.</p>
            <a class="mt-4 inline-block rounded-xl border border-white/10 bg-white/5 px-4 py-2 text-sm font-semibold hover:bg-white/10" href="#">
              Join community
            </a>
          </div>
        </div>

        <div class="mt-10 rounded-2xl border border-white/10 bg-white/5 p-6">
          <h2 class="text-lg font-semibold">FAQ</h2>
          <div class="mt-4 grid gap-3">
            {faqs.map((item) => (
              <details class="rounded-xl border border-white/10 bg-zinc-950 p-4">
                <summary class="cursor-pointer text-sm font-semibold text-zinc-100">{item.q}</summary>
                <p class="mt-2 text-sm text-zinc-400">{item.a}</p>
              </details>
            ))}
          </div>
        </div>

        <div class="mt-10 rounded-2xl border border-white/10 bg-white/5 p-6" id="contactSection">
          <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between" id="contactIntro">
            <div>
              <div class="text-sm font-semibold">Still stuck?</div>
              <p class="mt-1 text-sm text-zinc-400">Send us a message and we'll get back to you.</p>
            </div>
            <button id="showFormBtn" class="rounded-xl bg-violet-500 px-6 py-3 text-center font-semibold text-zinc-950 hover:bg-violet-400 transition-colors">
              Contact support
            </button>
          </div>

          <form id="contactForm" class="hidden mt-6 space-y-4">
            <div class="grid gap-4 md:grid-cols-2">
              <div class="space-y-1">
                <label for="name" class="text-xs font-semibold text-zinc-300">Name</label>
                <input type="text" id="name" name="name" required
                  class="w-full rounded-lg border border-white/10 bg-zinc-950 px-3 py-2 text-sm text-white placeholder-zinc-500 focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500"
                  placeholder="Jane Doe"
                />
              </div>
              <div class="space-y-1">
                <label for="email" class="text-xs font-semibold text-zinc-300">Email</label>
                <input type="email" id="email" name="email" required
                  class="w-full rounded-lg border border-white/10 bg-zinc-950 px-3 py-2 text-sm text-white placeholder-zinc-500 focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500"
                  placeholder="jane@example.com"
                />
              </div>
            </div>
            
            <div class="space-y-1">
              <label for="subject" class="text-xs font-semibold text-zinc-300">Subject</label>
               <select id="subject" name="subject" required
                  class="w-full rounded-lg border border-white/10 bg-zinc-950 px-3 py-2 text-sm text-white focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500"
                >
                  <option value="" disabled selected>Select a topic</option>
                  <option value="General Inquiry">General Inquiry</option>
                  <option value="Bug Report">Bug Report</option>
                  <option value="Feature Request">Feature Request</option>
                  <option value="Other">Other</option>
                </select>
            </div>

            <div class="space-y-1">
              <label for="message" class="text-xs font-semibold text-zinc-300">Message</label>
              <textarea id="message" name="message" rows="4" required
                class="w-full rounded-lg border border-white/10 bg-zinc-950 px-3 py-2 text-sm text-white placeholder-zinc-500 focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500"
                placeholder="How can we help?"
              ></textarea>
            </div>

            <div id="formMessage" class="hidden rounded-lg p-3 text-sm"></div>

            <div class="flex items-center justify-end gap-3 pt-2">
              <button type="button" id="cancelBtn" class="px-4 py-2 text-sm font-semibold text-zinc-400 hover:text-white transition-colors">
                Cancel
              </button>
              <button type="submit" id="submitBtn" class="rounded-lg bg-violet-500 px-6 py-2 text-sm font-semibold text-zinc-950 hover:bg-violet-400 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                Send Message
              </button>
            </div>
          </form>
        </div>
      </section>
    </main>

    <footer class="border-t border-white/10 bg-zinc-950/60">
      <div class="mx-auto max-w-6xl px-4 py-10 text-sm text-zinc-400">
        <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
          <div>© {new Date().getFullYear()} {brand}. Built with Astro + Tailwind.</div>
          <div class="flex gap-4">
            <a class="hover:text-zinc-200" href="/privacy">Privacy</a>
            <a class="hover:text-zinc-200" href="/support">Support</a>
            <a class="hover:text-zinc-200" href="/about">About</a>
          </div>
        </div>
      </div>
    </footer>

    <script>
      const menuBtn = document.getElementById("menuBtn");
      const mobileMenu = document.getElementById("mobileMenu");
      menuBtn?.addEventListener("click", () => mobileMenu.classList.toggle("hidden"));

      // Contact Form Logic
      const showFormBtn = document.getElementById("showFormBtn");
      const contactForm = document.getElementById("contactForm");
      const contactIntro = document.getElementById("contactIntro");
      const cancelBtn = document.getElementById("cancelBtn");
      const submitBtn = document.getElementById("submitBtn") as HTMLButtonElement;
      const formMessage = document.getElementById("formMessage");

      showFormBtn?.addEventListener("click", () => {
        showFormBtn.classList.add("hidden");
        contactIntro?.classList.add("hidden");
        contactForm?.classList.remove("hidden");
      });

      cancelBtn?.addEventListener("click", () => {
        contactForm?.reset();
        contactForm?.classList.add("hidden");
        contactIntro?.classList.remove("hidden");
        showFormBtn?.classList.remove("hidden");
        if (formMessage) formMessage.classList.add("hidden");
      });

      contactForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        
        if (!submitBtn || !formMessage) return;

        const formData = new FormData(e.target as HTMLFormElement);
        const data = Object.fromEntries(formData.entries());

        // Reset state
        submitBtn.disabled = true;
        submitBtn.textContent = "Sending...";
        formMessage.classList.add("hidden");
        formMessage.className = "hidden rounded-lg p-3 text-sm"; // reset classes

        try {
          const response = await fetch("/api/contact", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
          });

          const result = await response.json();

          if (response.ok) {
            formMessage.textContent = "Message sent successfully! We'll be in touch soon.";
            formMessage.classList.remove("hidden");
            formMessage.classList.add("bg-green-500/10", "text-green-400", "border", "border-green-500/20");
            (e.target as HTMLFormElement).reset();
            
            // Close form after delay
            setTimeout(() => {
                contactForm?.classList.add("hidden");
                contactIntro?.classList.remove("hidden");
                showFormBtn?.classList.remove("hidden");
                formMessage.classList.add("hidden");
                submitBtn.disabled = false;
                submitBtn.textContent = "Send Message";
            }, 3000);
          } else {
            throw new Error(result.message || "Something went wrong");
          }
        } catch (error: any) {
          formMessage.textContent = error.message;
          formMessage.classList.remove("hidden");
          formMessage.classList.add("bg-red-500/10", "text-red-400", "border", "border-red-500/20");
          submitBtn.disabled = false;
          submitBtn.textContent = "Send Message";
        }
      });
    </script>
  </body>
</html>
